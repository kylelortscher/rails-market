<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="card card-block" style="margin-top: 2%;margin-bottom: 19%;">
        <h2 style="font-weight: 800; text-align: center;margin-top: 5%;margin-bottom: 8%;">New Service</h2>
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <% if @service.errors.any? %>
                <% @service.errors.full_messages.each do |message| %>
                    <div class="alert alert-danger" role="alert">
                      <%= message %>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>