<% @services.each do |service| %>
    <tr>
      <td><%= service.title %></td>
      <td><%= service.price %></td>
      <td><%= service.desc %></td>
      <td><a href="/services/<%= service.titleSeo %>">Show Service</a></td>
      <td><%= link_to 'Edit', edit_test_path(service) %></td>
