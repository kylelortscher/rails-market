<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="card card-block">
        <h2 style="font-weight: 800;text-align: center;margin-top: 5%;margin-bottom: 5%;">Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <!-- Username -->
            <div class="form-group">
              <input type="text" autofocus="autofocus" autocomplete="off" class="form-control" placeholder="username" name="user[username]" id="user_username">
            </div>

            <!-- Email -->
            <div class="form-group">
              <input type="email" autocomplete="off" placeholder="email" class="form-control" name="user[email]">
            </div>

            <!-- Password -->
            <div class="form-group">
              <input type="password" autocomplete="off" class="form-control" placeholder="password" name="user[password]">
            </div>

            <!-- Password Confirmation -->
            <div class="form-group">
              <input type="password" autocomplete="off" class="form-control" placeholder="password confirmation" name="user[password_confirmation">
            </div>

            <div class="row">
              <div class="col-xs-8 col-xs-offset-2">
                <input type="submit" name="commit" style="margin-top: 5%;" class="btn btn-success btn-block" value="Sign Up">
              </div>
            </div>
        <% end %>
        <p style="text-align: center;margin-top: 5%;"><a href="/users/sign_in">Log In</a></p>
      </div>
    </div>
  </div>
</div>
